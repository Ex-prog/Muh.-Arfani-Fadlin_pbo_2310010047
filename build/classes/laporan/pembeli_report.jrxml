<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports
              http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="pembeli_report"
              pageWidth="595"
              pageHeight="842"
              columnWidth="555"
              leftMargin="20"
              rightMargin="20"
              topMargin="20"
              bottomMargin="20"
              language="java">

    <!-- QUERY -->
    <queryString>
        <![CDATA[
            SELECT id_pembeli, id_admin, alamat_pengiriman FROM pembeli
        ]]>
    </queryString>

    <!-- FIELDS -->
    <field name="id_pembeli" class="java.lang.String"/>
    <field name="id_admin" class="java.lang.String"/>
    <field name="alamat_pengiriman" class="java.lang.String"/>

    <!-- TITLE -->
    <title>
        <band height="40">
            <staticText>
                <reportElement x="0" y="5" width="555" height="30"/>
                <textElement textAlignment="Center">
                    <font size="16" isBold="true"/>
                </textElement>
                <text><![CDATA[LAPORAN DATA PEMBELI]]></text>
            </staticText>
        </band>
    </title>

    <!-- COLUMN HEADER -->
    <columnHeader>
        <band height="30">

            <!-- TEXT -->
            <staticText>
                <reportElement x="0" y="5" width="80" height="20"/>
                <textElement textAlignment="Center"/>
                <text><![CDATA[ID Pembeli]]></text>
            </staticText>

            <staticText>
                <reportElement x="80" y="5" width="150" height="20"/>
                <textElement textAlignment="Center"/>
                <text><![CDATA[ID Admin]]></text>
            </staticText>

            <staticText>
                <reportElement x="230" y="5" width="160" height="20"/>
                <textElement textAlignment="Center"/>
                <text><![CDATA[Alamat Pengiriman]]></text>
            </staticText>

            <!-- GARIS HORIZONTAL -->
            <line>
                <reportElement x="0" y="0" width="390" height="1"/>
            </line>
            <line>
                <reportElement x="0" y="29" width="390" height="1"/>
            </line>

            <!-- GARIS VERTIKAL -->
            <line><reportElement x="0"   y="0" width="1" height="30"/></line>
            <line><reportElement x="80"  y="0" width="1" height="30"/></line>
            <line><reportElement x="230" y="0" width="1" height="30"/></line>
            <line><reportElement x="390" y="0" width="1" height="30"/></line>
           

        </band>
    </columnHeader>

    <!-- DETAIL -->
    <detail>
        <band height="22">

            <!-- DATA -->
            <textField>
                <reportElement x="0" y="3" width="80" height="16"/>
                <textElement textAlignment="Center"/>
                <textFieldExpression><![CDATA[$F{id_pembeli}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="80" y="3" width="150" height="16"/>
                <textFieldExpression><![CDATA[$F{id_admin}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="230" y="3" width="160" height="16"/>
                <textFieldExpression><![CDATA[$F{alamat_pengiriman}]]></textFieldExpression>
            </textField>

            <!-- GARIS BAWAH -->
            <line>
                <reportElement x="0" y="21" width="390" height="1"/>
            </line>

            <!-- GARIS VERTIKAL -->
            <line><reportElement x="0"   y="0" width="1" height="22"/></line>
            <line><reportElement x="80"  y="0" width="1" height="22"/></line>
            <line><reportElement x="230" y="0" width="1" height="22"/></line>
            <line><reportElement x="390" y="0" width="1" height="22"/></line>
           
        </band>
    </detail>

</jasperReport>
