<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports
              http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="pesanan_report"
              pageWidth="595"
              pageHeight="842"
              columnWidth="555"
              leftMargin="20"
              rightMargin="20"
              topMargin="20"
              bottomMargin="20"
              language="java">

    <!-- QUERY -->
    <queryString>
        <![CDATA[
            SELECT 
                id_pesanan,
                id_pembeli,
                id_ikan,
                jumlah,
                tanggal_pesanan,
                total_harga,
                status_pesanan,
                metode_pembayaran
            FROM pesanan
        ]]>
    </queryString>

    <!-- FIELDS -->
    <field name="id_pesanan" class="java.lang.String"/>
    <field name="id_pembeli" class="java.lang.String"/>
    <field name="id_ikan" class="java.lang.String"/>
    <field name="jumlah" class="java.lang.String"/>
    <field name="tanggal_pesanan" class="java.lang.String"/>
    <field name="total_harga" class="java.lang.String"/>
    <field name="status_pesanan" class="java.lang.String"/>
    <field name="metode_pembayaran" class="java.lang.String"/>

    <!-- TITLE -->
    <title>
        <band height="40">
            <staticText>
                <reportElement x="0" y="5" width="555" height="30"/>
                <textElement textAlignment="Center">
                    <font size="16" isBold="true"/>
                </textElement>
                <text><![CDATA[LAPORAN DATA PESANAN]]></text>
            </staticText>
        </band>
    </title>

    <!-- COLUMN HEADER -->
    <columnHeader>
    <band height="25">

        <staticText>
            <reportElement x="0" y="5" width="60" height="20"/>
            <textElement textAlignment="Center">
                <font isBold="true"/>
            </textElement>
            <text><![CDATA[ID Pesanan]]></text>
        </staticText>

        <staticText>
            <reportElement x="60" y="5" width="70" height="20"/>
            <textElement textAlignment="Center">
                <font isBold="true"/>
            </textElement>
            <text><![CDATA[ID Pembeli]]></text>
        </staticText>

        <staticText>
            <reportElement x="130" y="5" width="60" height="20"/>
            <textElement textAlignment="Center">
                <font isBold="true"/>
            </textElement>
            <text><![CDATA[ID Ikan]]></text>
        </staticText>

        <staticText>
            <reportElement x="190" y="5" width="50" height="20"/>
            <textElement textAlignment="Center">
                <font isBold="true"/>
            </textElement>
            <text><![CDATA[Jumlah]]></text>
        </staticText>

        <staticText>
            <reportElement x="240" y="5" width="110" height="20"/>
            <textElement textAlignment="Center">
                <font isBold="true"/>
            </textElement>
            <text><![CDATA[Tanggal Pesanan]]></text>
        </staticText>

        <staticText>
            <reportElement x="350" y="5" width="80" height="20"/>
            <textElement textAlignment="Center">
                <font isBold="true"/>
            </textElement>
            <text><![CDATA[Total Harga]]></text>
        </staticText>

        <staticText>
            <reportElement x="430" y="5" width="65" height="20"/>
            <textElement textAlignment="Center">
                <font isBold="true"/>
            </textElement>
            <text><![CDATA[Status Pesanan]]></text>
        </staticText>

        <staticText>
            <reportElement x="495" y="5" width="60" height="20"/>
            <textElement textAlignment="Center">
                <font isBold="true"/>
            </textElement>
            <text><![CDATA[Metode Pembayaran]]></text>
        </staticText>

    </band>
</columnHeader>


    <!-- DETAIL -->
    <detail>
        <band height="22">

            <textField>
                <reportElement x="0" y="3" width="60" height="16"/>
                <textElement textAlignment="Center"/>
                <textFieldExpression><![CDATA[$F{id_pesanan}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="60" y="3" width="70" height="16"/>
                <textFieldExpression><![CDATA[$F{id_pembeli}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="130" y="3" width="60" height="16"/>
                <textFieldExpression><![CDATA[$F{id_ikan}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="190" y="3" width="50" height="16"/>
                <textElement textAlignment="Center"/>
                <textFieldExpression><![CDATA[$F{jumlah}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="240" y="3" width="110" height="16"/>
                <textFieldExpression><![CDATA[$F{tanggal_pesanan}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="350" y="3" width="80" height="16"/>
                <textFieldExpression><![CDATA[$F{total_harga}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="430" y="3" width="65" height="16"/>
                <textFieldExpression><![CDATA[$F{status_pesanan}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="495" y="3" width="60" height="16"/>
                <textFieldExpression><![CDATA[$F{metode_pembayaran}]]></textFieldExpression>
            </textField>

        </band>
    </detail>

</jasperReport>
